<h1>Add a task</h1>

<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title, 'enter a task' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :details, "enter the deets'" %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= check_box_tag(:completed) %>
    <%= label_tag(:completed, "task done?") %>
  </div>


  <%= f.submit class: 'btn btn-primary' %>
<% end %>
