<h1>My Tasks...</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <h2><%= link_to task.name, task_path(task) %></h2>
      <p>title: <%= task.item %></p>
      <p>completed: <%= task.completed %></p>
      <p><%= link_to "Delete", task_path(task), method: :destroy %></p>
    </li>
  <% end %>
</ul>

<%= link_to 'Back', :back %>
